            "options": {
                "cwd": "E:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: E:\\MinGW\\bin\\g++.exe"
        }
    ],
    "version": "2.0.0"
